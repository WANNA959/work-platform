#macro(daoSelect)
#foreach($uniKeyColumn in $uniKeyColumns)
    /**
    * 根据唯一索引($!{uniKeyColumn.name})修改数据
    *
    * @param $!{uniKeyColumn.name} 唯一索引
    * @param $!tool.firstLowerCase($!{tableInfo.name}) 实例对象
    * @return 影响行数
    */
